<section class="mt-6">
  <div class="container">
    <div class="row mb-4">
      <h4 class="font-weight-bold">
        <span class="bg-warning px-2 mr-1 rounded"><%= @places.count %></span> Results in <%= current_user.location.city %>
      </h4>
    </div>
    <div class="row">
      <% @places.each do |place| %>
        <div class="col-12 col-md-6 col-lg-4 d-flex">
          <div class="card mb-6 shadow-light-lg lift lift-lg">
            <a class="card-img-top py-10 bg-size-cover position-relative" href="#!" style="background: url(<%= cl_image_path place.photos.first.key %>);"></a>
              <div class="position-absolute text-white bg-black btn-pill btn-small h6 px-3" style="z-index: 9999; top: 15px; left: 20px;">
                  <%= place.category %>
                </div>
                <div class="card-score">
                  <%= place.covid_score %>
                </div>

                <div class="position-absolute" style="z-index: 9999; top: 180px; right: 20px;">
                  <%= link_to place_bookmarks_path(place), method: :create  do %>
                    <%# BOOKMARKING %>
                      <i data-place-id="<%= place.id  %>" class="place-heart-icon fa-lg">
                        <%= render 'places/heart', place: place %>
                      </i>
                  <% end %>
                </div>


                <div class="position-relative">
                  <div class="shape shape-fluid-x shape-bottom svg-shim text-white">
                    <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 48h2880V0h-720C1442.5 52 720 0 720 0H0v48z" fill="currentColor"/></svg>                </div>
                </div>
            <div class="card-body pt-4 mt-0" href="#!">
              <h5 class="mb-1"><%= link_to place.name, place_path(place) %></h5>
              <h6 class="text-uppercase text-muted mr-2 mb-0">
                <% place.rating.to_i.times do  %>
                   <span class="fa fa-star text-warning"></span>
                <% end %>
                <%= place.rating %>
                <% place.price.to_i.times do %>$<% end %>
              </h6>
              <p class="mb-0 text-muted mt-2">
                <%= place.description.truncate(150) %>
              </p>
              <h5 class="mt-3">
                <% place.tag_list.take(4).each do |tag| %>
                  <%#= link_to tag, tagged_path(tag: tag), class: "badge badge-warning" %>
                  <span class="badge rounded-pill bg-secondary-soft"><%= tag %></span>
                <% end %>
              </h5>

            </div>
            <a class="card-meta" href="#!">
              <!-- Avatar -->
              <!-- <div class="avatar avatar-sm mr-2">
                <img src="assets/img/avatars/avatar-1.jpg" alt="..." class="avatar-img rounded-circle">
              </div> -->

              <h6 class="text-uppercase text-muted mr-2 mb-0">

              </h6>

              <p class="h6 text-uppercase text-muted mb-0 ml-auto">

              </p>

            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
