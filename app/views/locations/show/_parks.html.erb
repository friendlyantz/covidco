<section class="pt-5 pt-md-2 pb-10">
  <div class="container">
    <h5 class="mb-5">Recommended for Social-Distancing</h5>
    <div class="row">
      <% categories = ["Music", "Sport", "Tours", "Drinks"]  %>
      <% categories.each_with_index do |category, i| %>
        <% place = @places.where(category: category)[0] %>
          <div class="col-6">
            <div class="card card-row shadow-light-lg mb-6">
              <div class="row gx-0">
                <a class="col-12 col-md-6 bg-cover card-img-left" style="background-image: url(<%= cl_image_path place.photos.first.key %>);" href="#!">
                  <div class="card-score">
                    <%= place.covid_score %>
                  </div>
                  <div class="shape shape-right shape-fluid-y svg-shim text-white d-none d-md-block">
                    <svg viewBox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M116 0H51v172C76 384 0 517 0 517v173h116V0z" fill="currentColor"/></svg>
                  </div>
                </a>
                <div class="col-12 col-md-6">
                  <a class="card-body p-5" href="#!">
                    <h5 class="small"><%= place.name %></h5>
                    <h6 class="mt-0">
                      <% place.rating.to_i.times do  %>
                         <span class="fa fa-star text-warning"></span>
                      <% end %>
                      <%= place.rating %>
                    </h6>
                    <p class="mb-0 text-muted">
                      <%= place.description.truncate(80) %>
                    </p>
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
