  <body>
    <section>
      <div class="container d-flex flex-column">
        <div class="row align-items-center justify-content-center gx-0 min-vh-100">
          <div class="col-12 col-md-6 col-lg-4 py-8 py-md-11">

            <!-- Heading -->
            <h6 class="mb-3 font-weight-bold text-uppercase text-primary">
              let's save lives.
            </h6>
            <h1 class="mb-3">
              Welcome, back.
            </h1>

            <!-- Text -->
            <p class="mb-6 text-muted lead">
              Thank you for contributing to a more conscious approach to COVID
              in your city.
            </p>

            <!-- Form -->
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <div class="form-group">
                  <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" },
                            class: "form-control" %>
                </div>
                <div class="form-group mb-5">
                  <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "current-password" },
                              class: "form-control" %>
                  <%= render "devise/shared/forgot_password" %>
                </div>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions mb-5">
                <%= f.button :submit, "Log in", class: "btn btn-block btn-primary"  %>
              </div>
            <% end %>
              <!-- Submit -->

            <!-- Text -->
            <%= render "devise/shared/links" %>

          </div>
          <div class="col-lg-7 offset-lg-1 align-self-stretch d-none d-lg-block">

            <!-- Image -->
            <div class="h-100 w-cover bg-cover" style="background-image: url(https://images.unsplash.com/photo-1512479064533-47d51d07bb93?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=934&q=80);"></div>

            <!-- Shape -->
            <div class="shape shape-left shape-fluid-y svg-shim text-white">
              <svg viewBox="0 0 100 1544" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 0h100v386l-50 772v386H0V0z" fill="currentColor"/></svg>            </div>

          </div>
        </div> <!-- / .row -->
      </div> <!-- / .container -->
    </section>
  </body>
