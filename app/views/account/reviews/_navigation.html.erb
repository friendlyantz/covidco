<div class="card card-bleed border-bottom border-bottom-md-0 shadow-light-lg">

  <!-- Collapse -->
  <div class="collapse d-md-block" id="sidenavCollapse">
    <div class="card-body">

      <!-- Heading -->
      <h6 class="font-weight-bold text-uppercase mb-3">
        Account
      </h6>

      <!-- List -->
      <ul class="card-list list text-gray-700 mb-6">
        <li class="list-item ">
          <%= link_to 'My Profile', account_users_path, class: "list-link" %>
        </li>
        <li class="list-item ">
          <%= link_to 'Bookmarks', account_bookmarks_path, class: "list-link" %>
        </li>
      </ul>

      <!-- Heading -->
      <h6 class="font-weight-bold text-uppercase mb-3">
        Contributions
      </h6>

      <!-- List -->
      <ul class="card-list list text-gray-700 mb-0">
        <li class="list-item active">
          <%= link_to account_reviews_path, class: "list-link" do  %>
            Reviews (<%= current_user.reviews.count %>)
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
