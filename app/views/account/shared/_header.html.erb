
<header data-jarallax data-speed=".8" class="py-14 py-md-10 overlay overlay-black overlay-80 bg-cover jarallax" style="background-image: url('<%= cl_image_path current_user.location.photo.key %>');">
  <div class="container-md">
    <div class="row align-items-center text-white ">
      <div class="col-auto">
        <%= image_tag "https://avatars.githubusercontent.com/#{current_user.last_name}", class: "img-fluid rounded-circle" %>
      </div>
      <div class="col">
        <h2 class="mb-2">
          <%= current_user.first_name %> <%= current_user.last_name.capitalize %>
        </h2>
        <h5><i class="fas fa-map-marker-alt mr-1"></i> <%= current_user.location.city %>, <%= current_user.location.state %></h5>
        <h4 class="badge badge-danger"><%#= current_user.covid_status %></h4>
      </div>
      <div class="col text-right">
        <%#= link_to edit_user_registration_path, class: "btn btn-outline-warning rounded-pill" do %>
          <%# Edit Profile %>
        <%# end %>
      </div>
    </div>
  </div> <!-- / .container -->
</header>
